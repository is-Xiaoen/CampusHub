# ============================================================================
# Demo RPC 服务配置模板
# ============================================================================
# 使用方法：复制此文件为 demo.yaml，然后修改相应配置
# cp demo.yaml.example demo.yaml
# ============================================================================

Name: demo.rpc
ListenOn: 0.0.0.0:19100    # 使用高端口避免冲突

# 服务注册（Etcd）
Etcd:
  Hosts:
    - <ETCD_HOST>:2379    # 例如: 192.168.10.4:2379
  Key: demo.rpc

# 日志配置
Log:
  ServiceName: demo-rpc
  Mode: console
  Level: info

# 数据库配置
MySQL:
  DataSource: <DB_USER>:<DB_PASSWORD>@tcp(<DB_HOST>:<DB_PORT>)/campushub_main?charset=utf8mb4&parseTime=true&loc=Local
  # 示例: root:123456@tcp(192.168.10.4:3308)/campushub_main?charset=utf8mb4&parseTime=true&loc=Local

# 链路追踪（可选）
# Telemetry:
#   Name: demo-rpc
#   Endpoint: http://<JAEGER_HOST>:14268/api/traces
#   Sampler: 1.0
#   Batcher: jaeger
