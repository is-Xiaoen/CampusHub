// internal/svc/servicecontext.go
package svc

import (
    "gorm.io/driver/mysql"
    "gorm.io/gorm"
)

type ServiceContext struct {
    Config    config.Config
    DB        *gorm.DB
    ItemModel *model.ItemModel
